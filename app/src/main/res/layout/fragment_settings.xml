<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/settingsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:textColor="@color/md_theme_onSurface"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Tuya Connection Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTuyaConnection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/md_theme_outlineVariant"
                app:cardBackgroundColor="@color/md_theme_surfaceContainerLow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settingsTitle">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iconTuya"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_cloud"
                        app:tint="@color/md_theme_primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textTuyaTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Cloud Connection"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/md_theme_onSurface"
                        app:layout_constraintBottom_toTopOf="@+id/textTuyaConnectionStatus"
                        app:layout_constraintEnd_toStartOf="@+id/buttonReconnectTuya"
                        app:layout_constraintStart_toEndOf="@+id/iconTuya"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textTuyaConnectionStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Status: Connecting..."
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="@color/md_theme_onSurfaceVariant"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/buttonReconnectTuya"
                        app:layout_constraintStart_toEndOf="@+id/iconTuya"
                        app:layout_constraintTop_toBottomOf="@+id/textTuyaTitle" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonReconnectTuya"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reconnect"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bulb Control Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBulbControl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/md_theme_outlineVariant"
                app:cardBackgroundColor="@color/md_theme_surfaceContainerLow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardTuyaConnection">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iconBulb"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_smart_bulb"
                        app:tint="@color/md_theme_primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textBulbTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Bulb Control"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/md_theme_onSurface"
                        app:layout_constraintBottom_toTopOf="@+id/textBulbDesc"
                        app:layout_constraintEnd_toStartOf="@+id/switchBulbOnOff"
                        app:layout_constraintStart_toEndOf="@+id/iconBulb"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textBulbDesc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Turn the smart bulb on or off"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="@color/md_theme_onSurfaceVariant"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/switchBulbOnOff"
                        app:layout_constraintStart_toEndOf="@+id/iconBulb"
                        app:layout_constraintTop_toBottomOf="@+id/textBulbTitle" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchBulbOnOff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Brightness Control (inside bulb control card) -->
                    <TextView
                        android:id="@+id/textBrightnessLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Brightness"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/md_theme_onSurfaceVariant"
                        app:layout_constraintEnd_toStartOf="@+id/textCurrentBrightness"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textBulbDesc" />

                    <TextView
                        android:id="@+id/textCurrentBrightness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="100%"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/md_theme_onSurface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textBulbDesc" />

                    <SeekBar
                        android:id="@+id/seekBarBrightness"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:max="100"
                        android:progress="100"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textBrightnessLabel" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Auto Schedule Settings Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSchedule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/md_theme_outlineVariant"
                app:cardBackgroundColor="@color/md_theme_surfaceContainerLow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardBulbControl">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iconSchedule"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_schedule"
                        app:tint="@color/md_theme_primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textScheduleTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Auto Schedule"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/md_theme_onSurface"
                        app:layout_constraintBottom_toTopOf="@+id/textScheduleDesc"
                        app:layout_constraintEnd_toStartOf="@+id/switchAutoSchedule"
                        app:layout_constraintStart_toEndOf="@+id/iconSchedule"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textScheduleDesc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Automatically adjust brightness at sunset and bedtime"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="@color/md_theme_onSurfaceVariant"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/switchAutoSchedule"
                        app:layout_constraintStart_toEndOf="@+id/iconSchedule"
                        app:layout_constraintTop_toBottomOf="@+id/textScheduleTitle" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchAutoSchedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- NEW: Schedule Status Display -->
                    <TextView
                        android:id="@+id/textScheduleStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:padding="8dp"
                        android:background="@drawable/rounded_status_background"
                        android:textColor="@android:color/white"
                        android:textSize="11sp"
                        android:textStyle="italic"
                        android:visibility="gone"
                        android:text="⏰ Next: Sunset at 18:30, Bedtime at 22:00"
                        android:drawableStart="@drawable/ic_schedule_small"
                        android:drawablePadding="6dp"
                        android:gravity="center_vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textScheduleDesc" />

                    <!-- Schedule Settings Container (visible when switch is on) -->
                    <LinearLayout
                        android:id="@+id/scheduleSettingsContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textScheduleStatus">

                        <!-- Sunset Setting -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/sunsetLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/md_theme_outline"
                            app:cardBackgroundColor="@color/md_theme_surfaceContainer"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp">

                                <ImageView
                                    android:id="@+id/imageSunset"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_sunset"
                                    app:tint="@color/md_theme_tertiary"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/textSunsetLabel"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:text="Sunset Dimming"
                                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                    android:textColor="@color/md_theme_onSurfaceVariant"
                                    app:layout_constraintBottom_toTopOf="@+id/textSunset"
                                    app:layout_constraintEnd_toStartOf="@+id/textSunsetBrightness"
                                    app:layout_constraintStart_toEndOf="@+id/imageSunset"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/textSunset"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:text="18:30"
                                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                    android:textColor="@color/md_theme_onSurface"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/textSunsetBrightness"
                                    app:layout_constraintStart_toEndOf="@+id/imageSunset"
                                    app:layout_constraintTop_toBottomOf="@+id/textSunsetLabel" />

                                <TextView
                                    android:id="@+id/textSunsetBrightness"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/brightness_badge"
                                    android:paddingHorizontal="8dp"
                                    android:paddingVertical="4dp"
                                    android:text="80%"
                                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                    android:textColor="@color/md_theme_onTertiary"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Bedtime Setting -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/bedtimeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="@color/md_theme_outline"
                            app:cardBackgroundColor="@color/md_theme_surfaceContainer"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp">

                                <ImageView
                                    android:id="@+id/imageBedtime"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_moon"
                                    app:tint="@color/md_theme_secondary"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/textBedtimeLabel"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:text="Bedtime Dimming"
                                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                    android:textColor="@color/md_theme_onSurfaceVariant"
                                    app:layout_constraintBottom_toTopOf="@+id/textBedtime"
                                    app:layout_constraintEnd_toStartOf="@+id/textBedtimeBrightness"
                                    app:layout_constraintStart_toEndOf="@+id/imageBedtime"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/textBedtime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:text="22:00"
                                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                    android:textColor="@color/md_theme_onSurface"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/textBedtimeBrightness"
                                    app:layout_constraintStart_toEndOf="@+id/imageBedtime"
                                    app:layout_constraintTop_toBottomOf="@+id/textBedtimeLabel" />

                                <TextView
                                    android:id="@+id/textBedtimeBrightness"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/brightness_badge_dark"
                                    android:paddingHorizontal="8dp"
                                    android:paddingVertical="4dp"
                                    android:text="20%"
                                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                    android:textColor="@color/md_theme_onSecondary"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textScheduleInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Tap times to customize. Brightness will adjust automatically at these times."
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="@color/md_theme_onSurfaceVariant"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/scheduleSettingsContainer" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Test Controls Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTestControls"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/md_theme_outlineVariant"
                app:cardBackgroundColor="@color/md_theme_surfaceContainerLow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardSchedule">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textTestTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Test Controls"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/md_theme_onSurface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/buttonContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textTestTitle">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonTestSunset"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:text="Test Sunset"
                            android:textSize="12sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonTestBedtime"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:layout_weight="1"
                            android:text="Test Bedtime"
                            android:textSize="12sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonResetSchedule"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:text="Reset"
                            android:textSize="12sp" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Light Color Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/md_theme_outlineVariant"
                app:cardBackgroundColor="@color/md_theme_surfaceContainerLow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardTestControls">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textColorTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Light Color"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/md_theme_onSurface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textColorLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Select a color for your smart bulb"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/md_theme_onSurfaceVariant"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textColorTitle" />

                    <!-- Native color selection approach -->
                    <HorizontalScrollView
                        android:id="@+id/colorPickerScrollView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:scrollbars="none"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textColorLabel">

                        <LinearLayout
                            android:id="@+id/colorContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <!-- Predefined color options -->
                            <View
                                android:id="@+id/colorYellow"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_margin="4dp"
                                android:background="@drawable/circle_color_selector"
                                android:clickable="true"
                                android:focusable="true"
                                android:tag="#FFDD99" />

                            <View
                                android:id="@+id/colorWhite"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_margin="4dp"
                                android:background="@drawable/circle_color_selector"
                                android:clickable="true"
                                android:focusable="true"
                                android:tag="#FFFFFF" />

                            <View
                                android:id="@+id/colorCool"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_margin="4dp"
                                android:background="@drawable/circle_color_selector"
                                android:clickable="true"
                                android:focusable="true"
                                android:tag="#BBEEFF" />

                            <View
                                android:id="@+id/colorBlue"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_margin="4dp"
                                android:background="@drawable/circle_color_selector"
                                android:clickable="true"
                                android:focusable="true"
                                android:tag="#99CCFF" />

                            <View
                                android:id="@+id/colorPurple"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_margin="4dp"
                                android:background="@drawable/circle_color_selector"
                                android:clickable="true"
                                android:focusable="true"
                                android:tag="#CC99FF" />

                            <View
                                android:id="@+id/colorRed"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_margin="4dp"
                                android:background="@drawable/circle_color_selector"
                                android:clickable="true"
                                android:focusable="true"
                                android:tag="#FFAAAA" />

                            <View
                                android:id="@+id/colorGreen"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_margin="4dp"
                                android:background="@drawable/circle_color_selector"
                                android:clickable="true"
                                android:focusable="true"
                                android:tag="#AAFFAA" />

                        </LinearLayout>
                    </HorizontalScrollView>

                    <!-- Color display/preview container -->
                    <LinearLayout
                        android:id="@+id/colorPreviewContainer"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rounded_corners"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/colorPickerScrollView">

                        <View
                            android:id="@+id/colorPreview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#FFDD99" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- User Profile Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardUserProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/md_theme_outlineVariant"
                app:cardBackgroundColor="@color/md_theme_surfaceContainerLow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardColor">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textProfileTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="User Profile"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/md_theme_onSurface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutUsername"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Username"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textProfileTitle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:text="User" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonSaveUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Save"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/inputLayoutUsername" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>